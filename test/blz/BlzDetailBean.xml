<record name="BlzDetail" version="1.0"
        xmlns="http://www.teherba.org/2006/xtrans/Record"
        package="org.teherba.checkdig.account"
        type="Bean" code="ASCII" length="18"
        rem="Attribute einer deutschen Bankleitzahl"
        sql="true" >
    <field name="blz"           rem="Bankleitzahl"              type="String" key="1" />
    <field name="fuehrend"      rem="1(2) = (nicht) führend"    type="String"     />
    <field name="institut"      rem="Kreditinstitut"            type="String"     />
    <field name="plz"           rem="Postleitzahl"              type="String"     />
    <field name="ort"           rem="Ort"                       type="String"     />
    <field name="inst"          rem="Institutskurzname"         type="String"     />
    <field name="instNr"        rem="Institutsnummer"           type="String"     />
    <field name="bic"           rem="Bank Identifier Code"      type="String"     />
    <field name="pzMethode"     rem="Prüfziffernmethode"        type="String"     />
    <field name="satzNr"        rem="seq  Satznummer"           type="String" key="2"    />
    <field name="aendKnz"       rem="(A)dd,(D)el,(U)nch,(M)od"  type="String"     />
    <field name="loeschung"     rem="1 (0) fuer zuk  Löschung"  type="String"     />
    <field name="folgeBlz"      rem="Folge-BLZ (wenn Löschg=1)" type="String"     />
    <field name="ibanRegel"     rem="Nummer der IBAN-Regel"     type="String"     />
    <field name="ibanVersion"   rem="Version der Regel"         type="String"     />
    <field name="okey"          rem="original access key"       type="String"     />
</record>
